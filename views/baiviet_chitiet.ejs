.navbar {
  background-color: #fff;
  padding: 12px 0;
  border-bottom: 1px solid #e5e5e5;
}

.navbar .container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 15px 30px;
  background: linear-gradient(to right, #ffffff, #f9f9f9);
  border: 1px solid #eee;
  border-radius: 16px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
}

/* --- LOGO --- */
.navbar-brand {
  font-size: 28px;
  font-weight: bold;
  color: #c10000 !important;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* --- NAV LINK (Đăng nhập, Quản lý,...) --- */
.navbar .nav-link {
  display: inline-block;
  min-width: 90px;
  text-align: center;
  padding: 6px 12px;
  margin-left: 8px;
  border-radius: 8px;
  background-color: #f1f1f1;
  border: 1px solid #ddd;
  font-weight: 500;
  color: #444;
  transition: all 0.2s ease;
}

.navbar .nav-link:hover {
  background-color: #c10000;
  color: white;
  border-color: #c10000;
}

/* --- Ô TÌM KIẾM --- */
.navbar input[type="text"] {
  border-radius: 20px;
  padding: 6px 14px;
  border: 1px solid #ccc;
  min-width: 150px;
  transition: all 0.3s ease;
}

.navbar input[type="text"]:focus {
  border-color: #c10000;
  box-shadow: 0 0 4px #c10000;
  outline: none;
}

/* --- THỜI TIẾT (WEATHER BOX) --- */
#weather {
  display: flex;
  align-items: center;
  gap: 8px;
  background-color: #fff;
  padding: 10px 16px;
  border-radius: 10px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
  font-size: 15px;
  color: #333;
  transition: all 0.3s ease;
  cursor: pointer;
}

#weather:hover {
  transform: scale(1.05);
  background-color: #fefefe;
}

#weather i {
  font-size: 20px;
  color: #c10000;
}

/* Mobile responsive */
@media (max-width: 767px) {
  #weather {
    flex-direction: column;
    text-align: center;
    padding: 12px;
  }

  .navbar .container {
    flex-direction: column;
    gap: 15px;
  }

  .navbar input[type="text"] {
    min-width: 100%;
    margin-top: 10px;
  }
}
