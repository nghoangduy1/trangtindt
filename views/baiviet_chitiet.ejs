			#weather {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 10px 20px;
  border-radius: 8px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  font-size: 16px;
  font-weight: 500;
  color: #333;
  transition: all 0.3s ease;
  cursor: pointer;
  transform: perspective(600px) rotateY(10deg);
  z-index: 10;
}

#weather i {
  font-size: 24px;
  margin-right: 10px;
  color: #c10000;
}

#weather:hover {
  transform: perspective(600px) rotateY(0deg) scale(1.05);
  box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
  background-color: #f5f5f5;
}

#weather .weather-info {
  display: flex;
  flex-direction: column;
}

#weather .temperature {
  font-size: 20px;
  font-weight: 700;
  color: #c10000;
}

#weather .description {
  font-size: 14px;
  color: #888;
}

@media (max-width: 767px) {
  #weather {
    flex-direction: column;
    text-align: center;
  }

  #weather .temperature {
    font-size: 18px;
  }

  #weather .description {
    font-size: 12px;
  }
}
